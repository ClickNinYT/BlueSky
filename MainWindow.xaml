<Window x:Class="BlueSky.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlueSky"
        mc:Ignorable="d"
        Title="BlueSky Launcher Beta 8 Version 0.8b (Special Release)"
        ResizeMode="CanResizeWithGrip" Height="489" Width="801">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="181*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="22*"/>
        </Grid.ColumnDefinitions>
        <Image Margin="129,58,9,231" Source="bluesky-logo-by-tech-archives.png" Grid.ColumnSpan="2"/>
        <Button x:Name="playbt" Content="Start Minecraft" Margin="36,258,48,166" Click="Button_Click1" Grid.Column="1"/>
        <Button x:Name="aboutbt" Content="About" Margin="474,416,23,10" Click="Button_Click" Grid.ColumnSpan="3" Grid.Column="1" />
        <Button x:Name="settingbt" Content="Settings" Margin="10,416,531,10" Click="Button_Click_1" Grid.ColumnSpan="2"/>
    </Grid>
    <Window.Background>
        <ImageBrush ImageSource="bs-bg.jpg" Stretch="UniformToFill" />
    </Window.Background>
</Window>
